{% layout 'default-layout.liquid' %}
{% block content %}
<h3>DB Sizes</h3>

<table class='table'>
  <thead>
    <tr>
      <th scope='col'>DB</th>
    </tr>
  </thead>
  <tbody>
    {% for db in dbs %}
      <tr>
        <th scope='row'>
          <a href='{{ DOCROOT }}/dbsizes/size/{{db.name}}'>{{ db.name }}</a>
        </th>
      </tr>
    {% endfor %}
  </tbody>
</table>

{% endblock %}
