{% layout 'default-layout.liquid' %}
{% block content %}
<h3>Backup details</h3>
<p>File: <b>{{file }}</b></p>
<form>
  <table class='table'>
    <thead>
      <tr>
        <th scope='col'>LogicalName</th>
        <th scope='col'>PhysicalName</th>
        <th scope='col'>Type</th>
        <th scope='col'>FileGroupName</th>
        <th scope='col'>Size</th>
      </tr>
    </thead>
    <tbody>
      {% for file in meta.files %}
        <tr>
          <td>{{ file.LogicalName }}</td>
          <td>{{ file.PhysicalName }}</td>
          <td>{{ file.Type }}</td>
          <td>{{ file.FileGroupName }}</td>
          <td>{{ file.Size }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

  <div class='btn-group' role='group' aria-label='Basic example'>
    <a class='btn btn-primary' href='{{ DOCROOT }}/restores/list'>Back</a>
    <a class='btn btn-primary' href='{{ DOCROOT }}/restores/restore/{{ file }}'>Restore</a>
  </div>
</form>
{% endblock %}
