{% layout 'default-layout.liquid' %}
{% block content %}
<h3>User list</h3>
<table class='table'>
  <thead>
    <tr>
      <th scope='col'>#</th>
      <th scope='col'>Login</th>
      <th scope='col'>Active</th>
      <th scope='col'>Level</th>
    </tr>
  </thead>
  <tbody>
    {% for user in users %}
      <tr>
        <th scope='row'>
          <a href='{{ DOCROOT }}/users/details/{{user.id}}'>{{ user.id }}</a>
        </th>
        <td>{{ user.login }}</td>
        <td>{{ user.active }}</td>
        <td>{{ user.level }}</td>
      </tr>
    {% endfor %}
  </tbody>
  
</table>

<div class="btn-group" role="group" aria-label="Basic example">
  <a class="btn btn-primary" href="{{ DOCROOT }}/users/new">Add new</a>  
</div>
{% endblock %}
