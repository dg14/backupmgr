<html>
  <head>
    <meta charset='utf-8'>
    <title>BackupMgr</title>
    <link href='{{ DOCROOT }}/css/bootstrap.min.css' rel='stylesheet' crossorigin='anonymous'>
    <link href='{{ DOCROOT }}/css/default.css' rel='stylesheet' crossorigin='anonymous'>
    <link id='theme1' href='{{ DOCROOT }}/css/vs2015.min.css' rel='stylesheet'>
    <script src='{{ DOCROOT }}/js/highlight.min.js' type='text/javascript' defer></script>
  </head>
  <body class='bg-body-tertiary'>
    <nav class='navbar navbar-expand-xl navbar-dark bg-dark' aria-label='Sixth navbar example'>
      <div class='container-fluid'>
        <a class='navbar-brand' href='#'>BackupMgr</a>
        <button
          class='navbar-toggler'
          type='button'
          data-bs-toggle='collapse'
          data-bs-target='#navbarsExample06'
          aria-controls='navbarsExample06'
          aria-expanded='false'
          aria-label='Toggle navigation'
        >
          <span class='navbar-toggler-icon'></span>
        </button>
        <div class='collapse navbar-collapse d-lg-flex' id='navbarsExample06'>
          <ul class='navbar-nav me-auto mb-2 mb-xl-0 justify-content-lg-begin'>
            <li class='nav-item'>
              <a class='nav-link active' aria-current='page' href='{{ DOCROOT }}/'>Home</a>
            </li>
            <li class='nav-item'>
              <a class='nav-link active' aria-current='page' href='{{ DOCROOT }}/jobs/list'>Jobs</a>
            </li>
            <li class='nav-item'>
              <a class='nav-link active' aria-current='page' href='{{ DOCROOT }}/jobinstances/list'>Job instances</a>
            </li>
            <li class='nav-item'>
              <a class='nav-link active' aria-current='page' href='{{ DOCROOT }}/restores/list'>Backup Analyzer</a>
            </li>
            {% if level == 1 %}
              <li class='nav-item'>
                <a class='nav-link active' aria-current='page' href='{{ DOCROOT }}/users/list'>Users</a>
              </li>
            {% endif %}
          </ul>
          <ul class='navbar-nav me-auto mb-2 mb-xl-0 justify-content-lg-end'>
            <li class='nav-item dropdown'>
              <a class='nav-link active dropdown-toggle' href='#' data-bs-toggle='dropdown' aria-expanded='false'
                >Profile</a
              >
              <ul class='dropdown-menu'>
                <li><a class='dropdown-item' href='{{ DOCROOT }}/profile'>Profile</a></li>
                <li><a class='dropdown-item' href='{{ DOCROOT }}/logout'>Logout</a></li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class='container-fluid'>
      <main class='col-md-9 ms-sm-auto col-lg-10 p-md-4'>{% block content %}My default content{% endblock %}</main>
    </div>

    <script src='{{ DOCROOT }}/js/bootstrap.bundle.min.js' defer crossorigin='anonymous'></script>
  </body>
</html>
